
<script type="text/javascript">

    {% spaceless %}
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    {% for key, tracker in google_analytics.trackers %}

    {% if key == google_analytics.defaultTracker %}
         {%  set prefix = '' %}
    {% else %}
        {%  set prefix = key ~ '.' %}
    {% endif %}



    ga('create', '{{ tracker.accountId }}', {{ tracker.config|json_encode|raw }});
    ga('{{ prefix }}send', 'pageview');
    
    {% for pageView in tracker.pageViews %}
    ga('{{ prefix }}send', 'pageview', {{ pageView|json_encode|raw }});
    {% endfor %}
    
    {% for event in tracker.events %}
    {# The event character is provided in the event entity via the HitType #}
    ga('{{ key }}.send', {{ event|json_encode|raw }} );
    {% endfor %}
    
    {% if tracker.transaction is defined && tracker.transaction not null %}
        ga('{{ key }}.require', 'ecommerce', 'ecommerce.js');
        ga('{{ key }}.ecommerce:addTransaction', {{ tracker.transaction|json_encode|raw }} );
        
        {% for item in tracker.transaction.items %}
            ga('{{ key }}.ecommerce:addItem', {{ item|json_encode|raw }});
        {% endfor %}
        
        ga('{{ key }}.ecommerce:send');
    {% endif %}
    
    {% for metDim in tracker.metricDims %}
    ga('set', '{{ metDim.name }}{{ metDim.index }}', {{ metDim.value }});
    {% endfor %}

    {% endfor %}
    {% endspaceless %}
    
    {% include 'pagerank.js.twig' %}

</script>
